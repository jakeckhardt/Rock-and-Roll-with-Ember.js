<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |band|}}
      <li class="rr-list-item" data-test-band-list-item>
        <LinkTo @route="bands.band" @model={{band.id}} class="rr-band-link" data-test-band-link>
          {{band.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        </LinkTo>
      </li>
    {{/each}}
    <div class="rr-new-label">
      {{#if this.isAddingBand}}
        <form class="rr-inline-form" {{on "submit" this.saveBand}}>
          <Input
            @type="text"
            @value={{this.newBandName}}
            class="rr-input"
            placeholder="New band"
            data-test-band-input
          />
          <button
            type="submit"
            class="rr-action-button"
            disabled={{this.isAddButtonDisabled}}
            data-test-band-button
          >
            Add
          </button>
          <button
            class="rr-cancel-icon"
            {{on "click" this.cancelAddBand}}
          >
            {{fa-icon "times"}}
          </button>
        </form>
      {{else}}
        <label {{on "click" this.addBand}} data-test-band-label>
          {{fa-icon "plus"}}
          <span class="ml1">Add new band</span>
        </label>
      {{/if}}
    </div>
  </ul>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>